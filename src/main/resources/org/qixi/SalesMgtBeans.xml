    </bean>
 
     <bean id="stockSaleVchService" class="org.qixi.salesMgt.service.impl.StockSaleVchServiceImpl">  
        <property name="dao" ref="stockSaleVchDao"></property>
     </bean>  

    <bean id="stockSaleVchAction" class="org.qixi.salesMgt.action.StockSaleVchAction" scope="prototype">
        <property name="service" ref="stockSaleVchService" ></property>
    </bean>  
      
</beans>